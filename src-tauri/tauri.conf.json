{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "rutar",
  "version": "0.1.0",
  "identifier": "com.fonlan.rutar",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1430",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "label": "main",
        "title": "Rutar",
        "width": 800,
        "height": 600,
        "dragDropEnabled": true,
        "visible": false,
        "decorations": false,
        "transparent": false
      }
    ],
    "security": {
      "csp": {
        "default-src": "'self'",
        "connect-src": [
          "'self'",
          "ipc:",
          "http://ipc.localhost",
          "https://ipc.localhost"
        ],
        "img-src": [
          "'self'",
          "asset:",
          "data:",
          "blob:"
        ],
        "style-src": [
          "'self'",
          "'unsafe-inline'"
        ],
        "font-src": [
          "'self'",
          "data:"
        ]
      },
      "devCsp": null,
      "freezePrototype": true,
      "capabilities": [
        "default"
      ]
    }
  },
  "bundle": {
    "active": false,
    "targets": "all",
    "icon": [
      "icons/icon.ico"
    ]
  }
}
